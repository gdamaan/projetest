{% extends 'base.html.twig' %}

{% block title %}Shop - Panier{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Les articles de mon panier</h1>

        <table class="table table-hover mt-4">
            <thead>
            <tr>
                <th scope="col">Numéro d'article</th>
                <th scope="col">URL</th>
                <th scope="col">Titre</th>
                <th scope="col">Résumé</th>
                <th scope="col">Date d'enregistrement</th>
                <th scope="col">Edition</th>
                <th scope="col">Suppresion</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <th scope="row">{{ article.id }}</th>
                    <td>{{ article.url }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.resume }}</td>
                    <td>{{ article.dateenre |date('d/m/Y') }}</td>
                    <td>
                        <a class="btn btn-info mt-4" href="{{ path('article.edit',{id: article.id })}}">Modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-danger mt-4" href="{{ path('article.delete',{id: article.id })}}">Suppression</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# display navigation #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(articles) }}
        </div>
    </div>
{% endblock %}
